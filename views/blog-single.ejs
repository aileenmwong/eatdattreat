<% include ./partials/boilerplate %>
<% include ./partials/header %>
<% include ./partials/nav-bar %>

<main>
  <div class="contentWrapper">
    <div class="postWrapper">
      <div class="post">
            <h1><%= post.name %></h1>
            <h2><%= post.tagline %></h2>
            <div class="authorData">
              <h6>Author: <%= post.author %></h6>
              <h6>Created on: <%= post.created_at %></h6>
            </div>
            <div class="mainImage"><img src="<%= post.image %>"></div>
            <div class="thumbImage"><img src="<%= post.thumbnail %>"></div>
            <div><%= post.content %></div>

        <div class="buttonSingleWrapper">
          <a href="/posts/<%= post.id %>/edit">
            <button id="editSingle">EDIT</button>
          </a>
          <form action="/posts/<%= post.id %>?_method=Delete " method="Post">
            <div><button id="deleteSingle">DELETE</button></div>
          </form>
        </div>
        <div class="readMoreLink"><a href="/posts">Back to blog</a></div>
      </div>
    </div>
    <% include ./partials/single-sidebar %>
  </div>
</main>

<% include ./partials/footer %>
<% include ./partials/end %>
