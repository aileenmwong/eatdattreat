<% include ./partials/boilerplate %>
<% include ./partials/header %>
<% include ./partials/nav-bar %>

<main>
  <h1>Edit post</h1>
  <form method='POST' action='/posts/<%= data.id %>?_method=PUT'>
    <div>
      <input name="id" type="hidden" value="<%= data.id %>" />
      <div>
        <input name="name" type="text" value="<%= data.name %>" />
      </div>
      <div>
        <input name="created_at" type="text" value="<%= data.created_at %>" />
      </div>
      <div>
        <input name="image" type="text" value="<%= data.image %>" />
      </div>
      <div>
        <textarea rows="10" cols="50" name="content" type="text" ><%= data.content %></textarea>
      </div>
      <div>
        <select name="tag" type="text">
          <option value="1">recipe</option>
          <option value="2">treat</option>
        </select>
      </div>
    </div>
    <div>
      <input type="submit" value="save" />
    </div>
  </form>
</main>

<% include ./partials/footer %>
<% include ./partials/end %>
